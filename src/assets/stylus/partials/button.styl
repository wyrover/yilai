.btn
  display inline-block
  font-size 14px
  border 1px solid button-border-default-color
  background button-background-default-color
  color gray
  padding 5px 20px
  box-sizing border-box

  &:hover
    background darken(button-background-default-color, 5%)
    color gray-dark

.btn-primary
  background button-background-primary-color
  border-color button-border-primary-color
  color #FFF

  &:hover
    background darken(button-background-primary-color, 15%)
    border-color darken(button-background-primary-color, 15%)
    color #FFF

  &.btn-disabled
  &.btn-disabled:hover
    background lighten(button-background-primary-color, 60%)
    border-color lighten(button-background-primary-color, 60%)
    color #FFF

.btn-danger
  background button-background-danger-color
  border-color button-border-danger-color
  color #FFF

  &:hover
    background darken(button-background-danger-color, 15%)
    border-color darken(button-background-danger-color, 15%)
    color #FFF

button[disabled]
  border 1px solid button-border-default-color
  background button-background-default-color
  color gray-lighter
  cursor not-allowed

  &:hover
    border 1px solid button-border-default-color
    background button-background-default-color
    color gray-lighter

.btn-xs
  font-size 12px
  padding 2px 10px

.btn-block
  display block
  width 100%
