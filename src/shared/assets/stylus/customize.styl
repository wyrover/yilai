// ==================================================
// 定制
// ==================================================

html
body
  height 100%
  overflow hidden

html
  font-size 20px

if responsive
  // 响应式设置
  @media only screen and (min-width: 320px)
    html
      font-size 10px

  @media only screen and (min-width: 480px)
    html
      font-size 15px

  @media only screen and (min-width: 640px)
    html
      font-size 20px

  @media only screen and (min-width: 800px)
    html
      font-size 25px

  @media only screen and (min-width: 960px)
    html
      font-size 30px

  @media only screen and (min-width: 1120px)
    html
      font-size 35px

  @media only screen and (min-width: 1280px)
    html
      font-size 40px

body
  margin 0
  color font-color
  line-height default-line-height
  background-color #FFF
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color rgba(0,0,0,0)

// 超链接
// ------------------------------
a
a:visited
  color link-color
  text-decoration none

// 斜体
// ------------------------------
i
  font-style normal

// 列表
// ------------------------------
ul
ol
  reset-list()

li
  line-height 1.5

// 表单元素
// ------------------------------

// 移除input和textarea元素默认的聚焦样式
input:focus
textarea:focus
  outline none

// 去除 iOS 输入框默认圆角和阴影
input[type="text"]
input[type="password"]
input[type="number"]
textarea
  appearance none
  border-radius 0

// 去除数字输入框后面的小尾巴
input[type="number"]::-webkit-inner-spin-button
input[type="number"]::-webkit-outer-spin-button
  appearance none
  margin 0
  height auto